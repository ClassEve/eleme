border-1px($color)
  position relative
  &:after
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    border-top 1px solid $color
    content ''

border-top-1px($color)
  position relative
  &:before
    top 0
    left 0
    display block
    position absolute
    width 100%
    border-top 1px solid $color
    content ''
